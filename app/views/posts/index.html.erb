<div class="is-flex is-flex-direction-column is-align-items-center">
  <div class="index-form">
    <%= form_for(@post) do |form| %>
      <%= form.text_field :content, id: :post_content, class: 'post-box mt-6 box', placeholder: 'What are you thinking?' %>
      <%= display_errors(@post) %>
      <%= form.submit 'Save' %>
    <% end %>
  </div>

  <article class="timeline is-flex is-flex-direction-column">
    <h3 class="is-size-3 is-size-4-mobile">
      Recent posts
    </h3>
    <ul class="posts">
      <%= render @timeline_posts %>
      <%= no_recent %>
    </ul>
  </article>
</div>